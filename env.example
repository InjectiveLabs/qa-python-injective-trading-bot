# ==============================================
# Trading Bot Environment Configuration
# ==============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# cp env.example .env
# 
# WARNING: NEVER commit the .env file to git!
# The .env file should be in .gitignore
# ==============================================

# ----------------------------------------------
# Web Dashboard Authentication
# ----------------------------------------------
# Credentials for accessing the web dashboard at http://localhost:8000
WEB_AUTH_USERNAME=admin
WEB_AUTH_PASSWORD=changeme123

# Alternative names (for compatibility with docker-compose)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=changeme123

# ----------------------------------------------
# Wallet 1 Configuration
# ----------------------------------------------
# Primary Market Maker Wallet
WALLET_1_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_1_NAME=Primary Market Maker
WALLET_1_ENABLED=true
WALLET_1_MAX_ORDERS=5
WALLET_1_BALANCE_THRESHOLD=100

# ----------------------------------------------
# Wallet 2 Configuration (Optional)
# ----------------------------------------------
# Secondary Market Maker Wallet
WALLET_2_PRIVATE_KEY=0xabcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890
WALLET_2_NAME=Secondary Market Maker
WALLET_2_ENABLED=true
WALLET_2_MAX_ORDERS=5
WALLET_2_BALANCE_THRESHOLD=100

# ----------------------------------------------
# Wallet 3 Configuration (Optional)
# ----------------------------------------------
# Tertiary Market Maker Wallet
WALLET_3_PRIVATE_KEY=0x9876543210fedcba9876543210fedcba9876543210fedcba9876543210fedcba
WALLET_3_NAME=Tertiary Market Maker
WALLET_3_ENABLED=true
WALLET_3_MAX_ORDERS=5
WALLET_3_BALANCE_THRESHOLD=100

# ----------------------------------------------
# Add more wallets as needed
# ----------------------------------------------
# Follow the pattern:
# WALLET_4_PRIVATE_KEY=...
# WALLET_4_NAME=...
# WALLET_4_ENABLED=true
# WALLET_4_MAX_ORDERS=5
# WALLET_4_BALANCE_THRESHOLD=100

# ----------------------------------------------
# Injective Network Configuration (Optional)
# ----------------------------------------------
# These are usually auto-detected, but you can override them
# INJECTIVE_NETWORK=testnet
# INJECTIVE_GRPC_ENDPOINT=sentry.chain.grpc-web.injective.network:443
# INJECTIVE_LCD_ENDPOINT=https://sentry.lcd.injective.network:443

# ----------------------------------------------
# Logging Configuration (Optional)
# ----------------------------------------------
# LOG_LEVEL=INFO
# LOG_FILE_MAX_SIZE=10485760  # 10MB
# LOG_RETENTION_DAYS=5

# ----------------------------------------------
# Docker Configuration (Advanced)
# ----------------------------------------------
# These are typically not needed, but can be set for advanced use cases
# DOCKER_HOST=unix:///var/run/docker.sock
